<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .sidebar {
            position: fixed;
            top: 51px;
            bottom: 0;
            left: 0;
            z-index: 1000;
            display: block;
            padding: 20px;
            overflow-x: hidden;
            overflow-y: auto;
            border-right: 1px solid #eee;
            background-color: #f5f5f5;
        }

        li.active {
            background-color: #428BCa !important;
            font-size: 18px!important;
        }

            li.active > a {
                color: white !important;
                text-align: center
            }

        .nav-sidebar {
            margin-right: -21px;
            margin-bottom: 20px;
            margin-left: -20px;
        }

        .main {
            padding-right: 40px;
            padding-left: 40px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GESCAFECAM-PRODUCTION-CM", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Accueil", "Account")</li>
                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fuild body-content">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li class="active"><a href="#">Menu</a></li>
                    <li>@Html.ActionLink("Gestion des Achats", actionName: "index", controllerName: "Achat")</li>
                    <li>@Html.ActionLink("Gestion des Sorties", actionName: "index", controllerName: "Sortie")</li>
                    <li>@Html.ActionLink("Gestion des Categories", actionName: "ListCategories", controllerName: "Categorie")</li>
                    <li>@Html.ActionLink("Gestion des Depenses", actionName: "index", controllerName: "Depense")</li>
                    <li>@Html.ActionLink("Gestion des Fournisseurs", actionName: "ListFournisseurs", controllerName: "Fournisseur")</li>
                    <li>@Html.ActionLink("Gestion des Produits", actionName: "ListProduits", controllerName: "Produit")</li>
                    <li>@Html.ActionLink("Gestion de TypeClient", actionName: "ListTypeClients", controllerName: "TypeClient")</li>
                    <li>@Html.ActionLink("Gestion des Clients", actionName: "ListClients", controllerName: "Client")</li>
                    <li>@Html.ActionLink("Gestion des Types Sorties", actionName: "ListTypeSorties", controllerName: "TypeSortie")</li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Bilan", actionName: "index", controllerName: "Bilan")</li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
