<br />
@{
    ViewBag.Title = "Bilan";
}

<h2>@ViewBag.Title</h2>
<br />
<div class="panel panel-success">
    <div class="panel-heading">
        <h2 class="panel-title">Bilan</h2>
    </div>
    <br />
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">

            <div class="form-group">
                @Html.Label("Date de Debut de la periode", new { @class = "control-label col-md-2" })
                @Html.TextBox("dateDebut", "", format: "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", @Type = "date" })
            </div>

            <div class="form-group">
                @Html.Label("Date de Fin de la periode", new { @class = "control-label col-md-2" })
                @Html.TextBox("dateFin", "", format: "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", @Type = "date" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2">
                    <input type="submit" value="Valider" />
                </div>
            </div>
        </div>
    }
    <br />
    <br />
    @if (ViewBag.MontantD != null)
    {
        <div class="form-group">
            <label class="control-label col-md-2">Montant Vente</label>
            <input type="text" value="@ViewBag.MontantV" class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Montant Depense</label>
            <input type="text" value="@ViewBag.MontantD" class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Montant Achat</label>
            <input type="text" value="@ViewBag.MontantA" class="form-control" readonly="readonly">
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Benefice</label>
            <input type="text" value="@ViewBag.Bene" class="form-control" readonly="readonly">
        </div>
    }
</div>











