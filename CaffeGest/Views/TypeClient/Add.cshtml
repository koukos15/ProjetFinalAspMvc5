@using CaffeGest.Models
@model TypeClient

@{
    ViewBag.Title = "Ajouter un Type de client";

}

<br />
<h2>@ViewBag.Title</h2>
<br />
<div class="panel panel-success">
    <div class="panel-heading">
        <h2 class="panel-title">Gestion du Type de client</h2>
    </div>
    <br />
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(m => m.Nom, new { @class = "control-label col-md-2" })
                    @Html.TextBoxFor(m => m.Nom, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nom, "", htmlAttributes: new { @class = "text-danger col-md-offset-2" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2">
                        <input type="submit" value="submit" />
                    </div>
                </div>
            </div>
        }
</div>

@Html.ActionLink("Retour", "ListTypeClients")